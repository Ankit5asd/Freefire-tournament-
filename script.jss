// Your UPI Detailsconst YOUR_UPI_ID = "punamkumari0778@axl";const YOUR_NAME = "Punam Kumari";const MIN_AMOUNT = 10;// Initialize QR Codelet upiQR = null;// Show UPI optionsfunction showUPIOptions() {    const amount = document.getElementById("depositAmount").value;    if (amount < MIN_AMOUNT) {        alert(`Minimum deposit is â‚¹${MIN_AMOUNT}!`);        return;    }    // Initialize/Update QR Code    const upiString = `upi://pay?pa=${YOUR_UPI_ID}&pn=${YOUR_NAME}&am=${amount}`;    if (!upiQR) {        upiQR = new QRCode(document.getElementById("upiQR"), {            text: upiString,            width: 200,            height: 200        });    } else {        upiQR.clear();        upiQR.makeCode(upiString);    }    document.getElementById("upiCard").classList.remove("hidden");}// Verify Paymentfunction verifyPayment() {    const trxId = document.getElementById("trxId").value;    if (!trxId) {        alert("Please enter transaction ID from your UPI app!");        return;    }    alert("Payment verification request sent to Punam. Coins will be added within 2 hours!");}// Update Balance (Example)let userBalance = 0;function updateBalance() {    document.getElementById("coins").textContent = userBalance;}// Example: Add coins after paymentfunction addCoins(amount) {    userBalance += amount;    updateBalance();}// Example: Deduct coins for tournamentfunction deductCoins(amount) {    if (userBalance >= amount) {        userBalance -= amount;        updateBalance();    } else {        alert("Not enough coins!");    }}
